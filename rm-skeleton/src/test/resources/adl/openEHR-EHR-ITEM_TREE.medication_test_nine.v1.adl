language
	original_language = <[ISO_639-1::en]>

definition
	ITEM_TREE[at0000] matches {	
		items cardinality matches {1..*; ordered} matches {
			ELEMENT[at0001] matches {	-- Name of medication
				value matches {
					DV_CODED_TEXT matches {
                        defining_code matches {
                            [local::
                              at0002,
                              at0003]
                        }
                    }
				}
			}
		}
	}	

